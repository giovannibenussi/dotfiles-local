Plug 'mattn/emmet-vim'
"Plug 'othree/csscomplete.vim'
"Plug 'rking/ag.vim'

Plug 'mileszs/ack.vim'
nnoremap \ :Ack!<SPACE>
nmap <silent> <C-f> :Ack! "<cword>" <CR>

